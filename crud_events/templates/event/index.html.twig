{% extends 'base.html.twig' %}

{% block stylesheets %}
            {{parent()}}
            <style>
                td > img {
                    width: 6rem;
                    min-width: 100px;
                    height: 6rem;
                    min-height: 100px;
                    object-fit: cover;
                }

                .page-header {
                    padding-bottom: 1em;
                    padding-top: 1em;
                    text-align: center;
                    color: #189AB4;
                    text-shadow: 2px 2px #D4F1F4;
                }
            </style>
{% endblock %}

{% block body %}

    <h1 class="page-header"> Upcoming Events </h1>
    <table class="table table-success table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Event</th>
                <th>Date & Time</th>
                <th>Location</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td scope="row"><img src="{{event.picture}}" alt="Event Picture" class="img-thumbnail"></td>
                    <td>{{event.name}}</td>
                    <td>{{event.date|date('F j, Y, g:i a')}}</td> 
                    <td>{{event.location}}</td>
                    <td> <a href="/details/{{event.id}}" class="btn btn-success">View</a>    
                        <a href="/edit/{{event.id}}" class="btn btn-warning">Edit</a>
                        <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>       
                    </td>
                </tr> 
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
